@page 
@model Ex7.Pages.CountryManager.CreateCountryModel
@{
	ViewData["Title"] = "Cadastramento de países!";
}

<h2>Cadastre cinco países!</h2>

<form method="post">
	<div class="form-group">
		@for (int i = 0; i < Model.Inputs.Count; i++)
		{
			<label asp-for="Inputs[@i].CountryName">Nome do @(i + 1) país</label>
			<input asp-for="Inputs[@i].CountryName" class="form-control" />
			<span asp-validation-for="Inputs[@i].CountryName" class="text-danger"></span>
		}
		<br /><br />
		<button type="submit" class="btn btn-primary">Cadastrar</button>
	</div>
</form>

@if (Model.Paises?.Count > 0)
{
	<h1>Países Cadastrados: </h1>
	<ul>
		@foreach (var pais in Model.Paises)
		{
			<li>@pais.CountryName</li>
		}
	</ul>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}



